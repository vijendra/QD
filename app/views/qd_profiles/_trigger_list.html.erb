<%= indicator %>
<% if @triggers.blank?%>
 <%= link_to("<b> Back to Date List </b>", qd_profiles_url( ) )%>
 <br />
 <br />
   No Record Found.
<% else %>
  <table class='listing'>
   <tr>
       <th> <%= remote_order_by_link(:created_at,:text => "Click date to view record details") %> </th>
       <th> <%= remote_order_by_link(:order_number ,:text => "Order Number") %> </th>
       <th> <%= remote_order_by_link(:total_records ,:text => "No of records")%> </th>
       <th> <%= remote_order_by_link(:marked ,:text => "Marked?") %> </th>
       <th> Mark entire data for print </th>
   </tr>
   <% @triggers.each do |trigger| %>
       <tr>
         <td> <b> <%= link_to_remote "#{Time.parse(trigger.created_at.to_s).strftime('%m/%d/%Y')}", :url => qd_profiles_url, :method => :get, :with => "'tid=' + #{trigger.id}" %> </td> </b>
         <td> <%= trigger.order_number %> </td>
         <td> <%= trigger.total_records %> </td>
         <td> <%= trigger.marked == 'yes' ? 'Yes' : 'No'%> </td>
         <td> <%= link_to 'Mark for Print', mark_data_qd_profiles_path(:tid =>trigger.id), :method => :post  %> </td>
      </tr>
   <% end %>

  </table>


  <table class='table-bottom'>
        <tr class="table-footer">

  	    <td><%= remote_per_page_select %></td>

            <td>
                <% form_tag(qd_profiles_path, :method => :get ) do %>
                    <% fields_for @search do |f|%>
                       <%= f.text_field :page, :class => 'textbox-tiny' %>
                        <%= submit_tag 'Go' %>
                    <%end%>
                <%end%>
            </td>

            <td> <% unless  @triggers.blank? %>
                    <div class="pagination">
                       <%= remote_page_links %>
                    </div>
                 <% end %>
            </td>

         </tr>
  </table>
  <% end %>
