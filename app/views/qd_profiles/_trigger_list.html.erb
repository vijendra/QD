<br /> <br />
<table>
    <tr> <td colspan =4> <b> Actions on Marked Data </b> <br /></td> </tr>
    <tr> <td colspan =4> &nbsp;</td> <tr>
    <tr>
       <td class='hide-for-print'> <%= link_to("<span>Print With Shell </span>", print_file_qd_profiles_url(:format => "pdf", :t => 1), :action => :get, :class=> "button")%> </td>
       <td class='hide-for-print'> <%= link_to("<span>Print Without Shell</span>", print_file_qd_profiles_url(:format => "pdf"), :action => :get, :class=> "button")%> </td>
       <td class='hide-for-print'> <%= link_to("<span>Print Labels</span>", print_labels_qd_profiles_url(:format => "pdf"), :action => :get, :class=> "button")%> </td>
        <td class='hide-for-print'> <%= link_to("<span>Get CSV Print File</span>", csv_print_file_qd_profiles_url(:format => "csv"), :action => :get, :class=> "button")%> </td> 
    </tr>
</table>
<br />

 
<% if @triggers.blank?%>


 <br />
 No Trigger Detail Record Found.
<% else %>
  <table class='listing'>
   <tr>
       <th> <%= remote_order_by_link(:created_at,:text => "Click on date to view records") %> </th>
       <th> <%= remote_order_by_link(:order_number ,:text => "Order No") %> </th>
       <th> <%= remote_order_by_link(:total_records ,:text => "Total records")%> </th>
       <th> <%= remote_order_by_link(:marked , :text => "Marked?") %> </th>
       <th> Mark for print </th>
   </tr>
   <% @triggers.each do |trigger| %>
       <tr>
         <td> <b> <%= link_to_remote "#{Time.parse(trigger.created_at.to_s).strftime('%m/%d/%Y')}", :url => qd_profiles_url, :method => :get, :with => "'tid=' + #{trigger.id}" %> </td> </b>
         <td> <%= trigger.order_number %> </td>
         <td> <%= trigger.total_records %> </td>
         <td> <%= (trigger.marked == 'yes' ||  trigger.marked == 'printed') ? (trigger.marked == 'printed'? 'Printed': 'Yes') : 'No' -%> </td>
         <td> 
            <% unless trigger.marked == 'yes'%>
               <% link_text = trigger.marked == 'printed' ? 'Re-Mark for Print' : 'Mark for Print' -%>
               <%= link_to link_text, mark_data_qd_profiles_path(:tid => trigger.id), :confirm => 'This action will mark all the records for PRINT. Are you sure?', :method => :post  %> 
            <% else -%>
               <%= link_to "Un-Mark for Print", unmark_data_qd_profiles_path(:tid => trigger.id), :confirm => 'This action will un-mark all the records for PRINT. Are you sure?', :method => :post  %> 
            <% end -%>
         </td>
      </tr>
   <% end %>

  </table>


  <table class='table-bottom'>
        <tr class="table-footer">

  	    <td><%= remote_per_page_select %></td>

            <td>
                <% form_tag(qd_profiles_path, :method => :get ) do %>
                    <% fields_for @search do |f|%>
                       <%= f.text_field :page, :class => 'textbox-tiny' %>
                        <%= submit_tag 'Go' %>
                    <%end%>
                <%end%>
            </td>

            <td> <% unless  @triggers.blank? %>
                    <div class="pagination">
                       <%= remote_page_links %>
                    </div>
                 <% end %>
            </td>

         </tr>
  </table>
  <% end %>
