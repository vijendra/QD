           jQuery.noConflict();
        </script>

        <script type="text/javascript">
		jQuery(function(){
                      jQuery('#tabs').tabs();
			});
	</script>
</head>

<body>

  <div id="header">
    <h1><%= image_tag('logo.gif') %></h1>
