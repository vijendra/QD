
<% form_tag('/admin/administrators/update_administrator_setting') do -%>
 <br />
  <table class = 'form-table-full'>
    <tr> <th colspan='2'> <%=h @administrator_setting.identifier.humanize %> </th> </tr>

   <%if @administrator_setting.identifier =~ /mail/%>
      <tr><th colspan='2'> <label> <b> Mail Subject </b> </label> </th></tr>

      <tr><td colspan='2'> <%= text_field_tag("subject[value]", @subject.blank? ? '' : @subject.value, :class => 'textbox-wide') %> </td></tr>

      <input id="subject_id" name="subject[id]" type="hidden" value="<%= @subject.id %>" />
      <tr><th colspan='2'> Mail Body </th></tr>
   <% end %>
   <tr><td colspan='2'> <%= fckeditor_textarea("administrator_setting", "value" , :toolbarSet => "Simple", :width => '100%', :height => '200px' ) %> </td></tr>

   <tr> <td> <%= submit_tag "Save Content"%></td>
               <td > <%if @administrator_setting.identifier =~ /mail/%>
                 <%= link_to "<span> Send Mail </span>", "/admin/robot/#{@administrator_setting.identifier}?ad=#{@administrator.id}", :class => 'button' %> </td>
               <% end %>
          </tr>
   </table>

   <input id="administrator_id" name="administrator[id]" type="hidden" value="<%= @administrator.id %>" />
   <input id="administrator_setting_id" name="administrator_setting[id]" type="hidden" value="<%= @administrator_setting.id %>" /><br />
<%end-%>
